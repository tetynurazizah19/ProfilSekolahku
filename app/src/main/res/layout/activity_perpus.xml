<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerpusActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp">


                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="188dp"
                        app:sliderAnimationDuration="1200"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="700"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />

                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="com.google.android.appbar.AppBarlayoutc$ScrolingviewBehavior">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">

                        <GridLayout
                            android:id="@+id/mainGrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="9"
                            android:alignmentMode="alignMargins"
                            android:columnCount="1"
                            android:columnOrderPreserved="false"
                            tools:layout_editor_absoluteX="14dp"
                            tools:layout_editor_absoluteY="16dp">

                            <!--                            pembuka menu 1-->
                            <androidx.cardview.widget.CardView
                                android:onClick="buku7"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="140dp"
                                        android:layout_height="140dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/bgbuku7">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textSize="15sp"
                                        android:text="KATALOG BUKU VII">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <!--                            penutup menu 1-->
                            pembuka menu 2-->

                            <androidx.cardview.widget.CardView
                                android:onClick="buku8"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:layout_width="140dp"
                                        android:layout_height="140dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/bgbuku8">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:text="KATALOG BUKU VIII">

                                    </TextView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <!--                            penutup menu 2-->
                            pembuka menu 3-->

                            <androidx.cardview.widget.CardView
                                android:onClick="buku9"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:layout_width="140dp"
                                        android:layout_height="140dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/bgbuku9">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:text="KATALOG BUKU XI"
                                        >

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </GridLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</RelativeLayout>